package com.example.demo.service;

import model.Club;
import model.Player;
import model.Position;

import com.example.demo.DTO.PlayerDTO;
import com.example.demo.repository.ClubRepository;
import com.example.demo.repository.PlayerRepository;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.List;
import java.util.Optional;

@Service
public class PlayerService {

	@Autowired
	PlayerRepository playerRepository;

	@Autowired
	ClubRepository clubRepository;

	public List<Player> getAllPlayers() {
		return playerRepository.findAll();
	}

	public Player getById(Long id) {
		return playerRepository.findById(id).orElse(null);
	}

	public Player updatePlayer(Player player) {
		return playerRepository.save(player);
	}

	public void deletePlayer(Long id) {
		playerRepository.deleteById(id);
	}
	
	public void save(Player player) {
        playerRepository.save(player);
    }
	
	public Player findByName(String name) {
        return playerRepository.findByName(name);
    }

	public List<Player> searchPlayers(String name, Position position, String club) {

		String playerName = (name == null || name.isBlank()) ? null : name;
		String clubName = (club == null || club.isBlank()) ? null : club;

		List<Player> results = playerRepository.searchPlayers(playerName, position, clubName);

		if (results.isEmpty()) {
			return getAllPlayers();
		}

		return results;
	}

	public void addPlayer(PlayerDTO dto) {
		Player p = new Player();
		p.setName(dto.getName());
		p.setPosition(dto.getPosition());
		Club club = clubRepository.findById(dto.getClubId()).orElse(null);
		p.setClub(club);
		p.setMarketValue(dto.getMarketValue());
		p.setAge(dto.getAge());
		playerRepository.save(p);
	}
	
	public boolean deleteByNameAndClub(String name, String clubName) {
	    Optional<Player> playerOpt = playerRepository.findByNameAndClub(name, clubName);
	    if (playerOpt.isPresent()) {
	        playerRepository.delete(playerOpt.get());
	        return true;
	    } else {
	        return false;
	    }
	}
	
	public Optional<Player> findByNameAndPositionAndClub(String name, Position position, Club club) {
        return playerRepository.findByNameAndPositionAndClub(name, position, club);
    }
	
	public Player updatePlayerAsAdmin(Player existingPlayer, Player updatedData) {
        existingPlayer.setName(updatedData.getName());
        existingPlayer.setPosition(updatedData.getPosition());
        existingPlayer.setClub(updatedData.getClub());
        existingPlayer.setMarketValue(updatedData.getMarketValue());
        existingPlayer.setAge(updatedData.getAge());
        return playerRepository.save(existingPlayer);
    }

    public Player updatePlayerAsManager(Player existingPlayer, Player updatedData) {
        existingPlayer.setName(updatedData.getName());
        existingPlayer.setPosition(updatedData.getPosition());
        return playerRepository.save(existingPlayer);
    }
    
    public boolean existsByNameAndClub(String name, Club club) {
        return playerRepository.existsByNameAndClub(name, club);
    }
}
